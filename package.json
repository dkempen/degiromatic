{
  "name": "degiromatic",
  "version": "1.0.0",
  "description": "Passively invest in ETFs or stocks with automated portfolio balancing via the DEGIRO broker.",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "npm run build && node ./dist/src/main.js",
    "build": "tsc",
    "build:dev": "tsc --sourceMap",
    "dev": "tsc-watch --sourceMap --onSuccess \"node dist/src/main.js\"",
    "docker": "docker compose -f compose.dev.yaml up --build",
    "lint": "eslint --max-warnings 0"
  },
  "dependencies": {
    "degiro-api": "git://github.com/CasperVerswijvelt/degiro-api.git#60aaf6678a9aaca1a20d990555943b3d31d0721f",
    "dotenv": "^17.2.1",
    "node-schedule": "^2.1.1",
    "otpauth": "^9.4.1",
    "pino": "^9.9.0",
    "pino-pretty": "git://github.com/pinojs/pino-pretty.git#99b1566c9961a25e586f7e9ae57fdc8438203d6e",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.1",
    "@types/node-schedule": "^2.1.8",
    "eslint": "^9.33.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "jiti": "^2.5.1",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "overrides": {
    "node-fetch": "^2.7.0"
  }
}
